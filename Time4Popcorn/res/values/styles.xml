<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- popcorn -->
    <style name="Theme.Popcorn" parent="android:Theme.Holo"></style>

    <style name="Theme.Popcorn.NoActionBar" parent="Theme.Popcorn">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.Popcorn.Player" parent="Theme.Popcorn.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="video_player_overlay">@color/transparent_gray</item>
    </style>

    <style name="Theme.Popcorn.Classic" parent="Theme.Popcorn.NoActionBar"></style>

    <!-- Settings -->

    <style name="SettingsButton">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/popcorn_settings_selector</item>
    </style>

    <style name="SettingsCategory">
        <item name="android:textColor">@color/p_drawer_item_selected</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsItem">
        <item name="android:background">@drawable/header_button_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="SettingsItemTitle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SettingsItemSummary">
        <item name="android:textColor">#a8a8a8</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Widget -->

    <style name="Widget" parent="android:Widget"></style>

    <style name="Widget.RatingBar">
        <item name="android:isIndicator">true</item>
        <item name="android:maxHeight">15dp</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:progressDrawable">@drawable/popcorn_rating_bar</item>
    </style>

    <style name="HeaderButton">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/header_button_selector</item>
    </style>

    <style name="WatchButton">
        <item name="android:background">@drawable/popcorn_watch_selector</item>
        <item name="android:shadowColor">@color/classic_text_shadow</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">@color/classic_watch_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PopcornSpinner">
        <item name="android:background">@drawable/popcorn_spinner</item>
        <item name="android:minHeight">23dp</item>
        <item name="android:spinnerMode">dialog</item>
    </style>

    <style name="DrawerSwitch">
        <item name="android:minHeight">26dp</item>
        <item name="android:maxHeight">26dp</item>
        <item name="android:textAppearance">@style/DrawerSwitchUnselected</item>
        <item name="android:background">@drawable/drawer_switch_unselected_selector</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="DrawerSwitchSelected">
        <item name="android:textColor">@color/classic_drawer_btn_text_selected</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DrawerSwitchUnselected">
        <item name="android:textColor">@color/classic_drawer_btn_text_unselected</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="FavoritesToggleButton">
        <item name="android:background">@drawable/popcorn_favorites_bkg</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
    </style>

    <style name="Theme" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    </style>

    <style name="TextField" parent="@android:style/Widget.Holo.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/editText</item>
        <item name="android:background">@drawable/edit_text_holo_dark</item>
    </style>

    <style name="CardNumber" parent="@style/TextField">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:hint">@string/cardNumber</item>
    </style>

    <style name="CVC" parent="@style/TextField">
        <item name="android:inputType">numberDecimal</item>
        <item name="android:hint">@string/cvc</item>
        <item name="android:layout_weight">0.7</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Button" parent="@android:style/Widget.Holo.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">@color/buttonText</item>
        <item name="android:background">@drawable/btn_default_holo_dark</item>
    </style>

    <style name="Spinner" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_background_holo_dark</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    </style>

    <style name="SpinnerItem" parent="@android:style/Widget.Holo.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/TextAppearance.SpinnerItem</item>
        <item name="android:textColor">@color/spinnerItem</item>
    </style>

    <style name="TextAppearance.SpinnerItem" parent="@android:style/TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/spinnerItem</item>
    </style>

    <style name="ExpMonth" parent="@style/Spinner">
        <item name="android:entries">@array/month_array</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="ExpYear" parent="@style/Spinner">
        <item name="android:entries">@array/year_array</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.8</item>
    </style>

    <style name="Header" parent="@android:style/Widget.Holo.TextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/header_dark</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/headerText</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>